<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dashboard"
    tools:context=".Dashboard">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/TopBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="75px"
                    android:layout_height="75px"
                    android:background="@drawable/livesnaplogo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5px"
                    android:fontFamily="@font/blinkerbold"
                    android:text="@string/app_name"
                    android:textColor="#514B4B"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#42A5DCB8"
                android:background="@drawable/round_btn"
                android:padding="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:background="@drawable/coin"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="3954"
                    android:fontFamily="@font/blinkerbold"
                    android:textSize="20sp"
                    android:textColor="#867F7F"/>

                <ImageButton
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:background="@drawable/add"
                    tools:ignore="SpeakableTextPresentCheck" />

            </LinearLayout>
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:scrollbars="none"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:padding="5dp"
                    android:backgroundTint="#030911A5"
                    android:background="@drawable/round_btn"
                    android:visibility="visible"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Promotion"
                        android:textSize="18sp"
                        android:fontFamily="@font/blinkerbold"
                        android:textColor="#3E98CB"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="40dp"
                        android:text="Earn Coins By Referring Others..."
                        android:textSize="18sp"
                        android:fontFamily="@font/blinkerbold"
                        android:textColor="#757474"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:padding="15px"
                    android:backgroundTint="#DC009688"
                    android:background="@drawable/shape_black">
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/vip"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="You're a Premium User !"
                        android:textSize="20sp"
                        android:textAllCaps="true"
                        android:textColor="#FFFFFF"
                        android:fontFamily="@font/blinkerbold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:padding="8dp"
                    android:backgroundTint="#683153FB"
                    android:background="@drawable/round_btn"
                    android:visibility="visible"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Admin Area"
                        android:fontFamily="@font/blinkerbold"
                        android:textColor="#ffffff"
                        android:visibility="gone"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- first row of the table layout-->
                        <TableRow

                            android:id="@+id/firstRow"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                app:cardCornerRadius="5dp"
                                android:outlineSpotShadowColor="#38000000"
                                android:layout_weight="1"
                                android:layout_marginRight="20dp"
                                app:cardBackgroundColor="#54000000">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/search"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Find User"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:outlineSpotShadowColor="#38000000"
                                app:cardBackgroundColor="#54000000">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/buycoin"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Send Feed"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                android:outlineSpotShadowColor="#38000000"
                                app:cardBackgroundColor="#54000000">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/manages"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Manage"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </TableRow>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="20px"
                    android:layout_marginEnd="20px"
                    android:padding="8dp"
                    android:backgroundTint="#7276FB"
                    android:background="@drawable/round_btn"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tools"
                        android:fontFamily="@font/blinkerbold"
                        android:textColor="#ffffff"
                        android:visibility="gone"
                        android:textSize="18sp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- first row of the table layout-->
                        <TableRow

                            android:id="@+id/UserRow"
                            android:layout_width="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_height="wrap_content">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                app:cardCornerRadius="5dp"
                                android:layout_marginRight="20dp"
                                android:outlineSpotShadowColor="#38000000"
                                app:cardBackgroundColor="#38000000">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/snap"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Snap"
                                        android:textSize="16sp"
                                        android:layout_gravity="center"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                app:cardCornerRadius="5dp"
                                android:outlineSpotShadowColor="#38000000"
                                app:cardBackgroundColor="#38000000">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/snapvideo"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Snap Video"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:layout_marginLeft="20dp"
                                app:cardCornerRadius="5dp"
                                android:outlineSpotShadowColor="#38000000"
                                app:cardBackgroundColor="#38000000">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/buy"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Buy Feed"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                        </TableRow>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:orientation="horizontal">


                        <!-- first row of the table layout-->
                        <TableRow

                            android:id="@+id/userComponents"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/profileBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp"
                                android:layout_marginRight="20dp"
                                app:cardBackgroundColor="#CC30223E">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="20dp"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginStart="50dp"
                                        android:layout_gravity="right"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/man"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Profile"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                app:cardCornerRadius="15dp"
                                app:cardBackgroundColor="#AD530C0C">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginStart="50dp"
                                        android:layout_gravity="right"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/security"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Security"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </TableRow>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">


                        <!-- first row of the table layout-->
                        <TableRow

                            android:id="@+id/ManagerComponents"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp"
                                android:layout_marginRight="20dp"
                                app:cardBackgroundColor="#A3153595">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:padding="20dp"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_marginStart="50dp"
                                        android:layout_gravity="right"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/snapchat"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Snap UserName"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                app:cardCornerRadius="15dp"
                                android:layout_marginStart="10dp"
                                app:cardBackgroundColor="#95270950">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="20dp"
                                    android:layout_gravity="center"
                                    android:orientation="vertical">
                                    <ImageView
                                        android:layout_width="65dp"
                                        android:layout_height="65dp"
                                        android:layout_marginStart="50dp"
                                        android:layout_gravity="right"
                                        android:layout_marginBottom="8dp"
                                        android:background="@drawable/team"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Manage Team"
                                        android:textSize="16sp"
                                        android:fontFamily="@font/blinkerbold"
                                        android:textColor="@color/white"/>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </TableRow>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>